<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_margin="3dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_fragment_head_img"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_launcher"
                android:layout_width="56dp"
                android:layout_height="56dp" />

            <ImageView
                android:src="@drawable/use"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="28dp"
                android:layout_height="28dp" />

            <TextView
                android:id="@+id/user_fragment_title"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@id/user_fragment_head_img"
                android:layout_toRightOf="@id/user_fragment_head_img"
                android:text="我们是是不是在哪见过"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/user_fragment_name"
                android:layout_below="@id/user_fragment_title"
                android:layout_toRightOf="@id/user_fragment_head_img"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="小旭"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>