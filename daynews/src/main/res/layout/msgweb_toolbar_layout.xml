<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:id="@+id/toolBar"
    app:theme="@style/toolbarTheme"
    android:background="#FB3D4F"
    app:popupTheme="@style/ToolbarPopupTheme"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/btn_actionbar_like_nor"
            android:id="@+id/msg_web_like_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/msg_web_like_tv"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="30dp"
            android:src="@drawable/btn_actionbar_comment_nor"
            android:id="@+id/msg_web_comment_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/msg_web_comment_tv"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="30dp"
            android:src="@drawable/btn_nav_favourite_nor"
            android:id="@+id/msg_web_fa_iv_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v7.widget.Toolbar>