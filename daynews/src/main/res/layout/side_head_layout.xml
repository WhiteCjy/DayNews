<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB3D4F"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:background="#FB3D4F"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/login_head"
            android:id="@+id/user_head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_vertical"
            android:text="今晚打老虎"
            android:id="@+id/user_head_name"
            style="@style/textView_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="#FB3D4F"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/side_favorite"
            android:text="收藏"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/icon_sidebar_favourite"
            style="@style/textView_style" />

        <TextView
            android:id="@+id/side_comment"
            android:text="评论"
            android:drawableLeft="@mipmap/icon_sidebar_comment"
            style="@style/textView_style" />

        <TextView
            android:id="@+id/side_read"
            android:text="阅读"
            android:drawableLeft="@mipmap/icon_sidebar_history"
            style="@style/textView_style" />
    </LinearLayout>
</LinearLayout>